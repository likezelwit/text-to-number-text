    <i class="fas fa-clipboard"></i> Convert Clipboard
  </div>

  <script>
    // Standard mapping
    const standardMap = {
      a: "4",  b: "8",  c: "01", d: "02", e: "3",  f: "03",
      g: "6",  h: "04", i: "1",  j: "05", k: "06", l: "1",
      m: "07", n: "08", o: "0",  p: "09", q: "10", r: "11",
      s: "5",  t: "7",  u: "12", v: "13", w: "14", x: "15",
      y: "16", z: "2"
    };

    // Advanced mapping (more leet speak variations)
    const advancedMap = {
      a: "4",  b: "8",  c: "(", d: "|)", e: "3",  f: "ph",
      g: "6",  h: "#", i: "1",  j: "7", k: "|<", l: "1",
      m: "/\\/\\", n: "|\\|", o: "0", p: "|D", q: "(_,)", r: "|2",
      s: "5",  t: "7",  u: "(_)", v: "\\/", w: "\\/\\/", x: "><",
      y: "`/", z: "2"
    };

    // Minimal mapping (only most common leet replacements)
    const minimalMap = {
      a: "4", e: "3", i: "1", o: "0", s: "5", t: "7", z: "2"
    };

    // Custom mapping (user-defined)
    let customMap = JSON.parse(localStorage.getItem('customMap')) || {};

    // Templates
    let templates = JSON.parse(localStorage.getItem('templates')) || [
      { text: "hello", result: "h3110" },
      { text: "selamat", result: "53140747" },
      { text: "zeli", result: "21611" }
    ];

    // Statistics
    let stats = JSON.parse(localStorage.getItem('stats')) || {
      totalConversions: 0,
      totalCharacters: 0,
      characterUsage: {},
      modeUsage: { standard: 0, advanced: 0, minimal: 0, custom: 0 }
    };

    // Reverse mapping for standard mode
    const reverseMap = {};
    for (const key in standardMap) {
      reverseMap[standardMap[key]] = key;
    }

    // Current mode
    let currentMode = 'standard';
    let conversionHistory = JSON.parse(localStorage.getItem('conversionHistory')) || [];
    let clipboardMonitorActive = false;
    let lastClipboardContent = "";

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      // Show intro screen
      const introOverlay = document.getElementById('introOverlay');
      
      // Hide intro after 2.5 seconds
      setTimeout(() => {
        introOverlay.style.opacity = '0';
        setTimeout(() => {
          introOverlay.style.display = 'none';
        }, 500);
      }, 2500);
      
      // Check for saved theme preference
      if (localStorage.getItem('theme') === 'dark') {
        document.body.classList.add('dark-mode');
        document.getElementById('themeToggle').innerHTML = '<i class="fas fa-sun"></i>';
      }

      // Load history
      loadHistory();
      
      // Load templates
      loadTemplates();
      
      // Load stats
      updateStats();
      
      // Load custom mapping
      loadCustomMapping();
      
      // Initialize batch container with one item
      addBatchItem();

      // Set up event listeners
      document.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', function() {
          document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
          document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
          
          this.classList.add('active');
          document.getElementById(this.dataset.tab).classList.add('active');
        });
      });

      document.querySelectorAll('.mode-option').forEach(option => {
        option.addEventListener('click', function() {
          document.querySelectorAll('.mode-option').forEach(o => o.classList.remove('active'));
          this.classList.add('active');
          currentMode = this.dataset.mode;
          convert(); // Re-convert with new mode
        });
      });

      document.getElementById('themeToggle').addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        const isDark = document.body.classList.contains('dark-mode');
        this.innerHTML = isDark ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
      
      // Close share options when clicking outside
      document.addEventListener('click', function(e) {
        const shareOptions = document.getElementById('shareOptions');
        const shareBtn = document.getElementById('shareBtn');
        
        if (!shareOptions.contains(e.target) && e.target !== shareBtn) {
          shareOptions.classList.remove('show');
        }
      });
    });

    function getMap() {
      switch (currentMode) {
        case 'advanced':
          return advancedMap;
        case 'minimal':
          return minimalMap;
        case 'custom':
          return { ...standardMap, ...customMap };
        default:
          return standardMap;
      }
    }

    function convert() {
      const text = document.getElementById("inputText").value.toLowerCase();
      let result = "";
      let mappingBreakdown = [];
      const map = getMap();
      
      for (const c of text) {
        const mappedValue = map[c] ?? c;
        result += mappedValue;
        
        // Add to mapping breakdown
        if (map[c]) {
          mappingBreakdown.push(`${c} > ${mappedValue}`);
        } else {
          mappingBreakdown.push(`${c} > ${c}`);
        }
      }
      
      document.getElementById("output").value = result;
      document.getElementById("charCount").textContent = `${result.length} characters`;
      
      // Show/hide elements based on whether there's input
      if (text) {
        document.getElementById("copyBtn").classList.remove("hidden");
        document.getElementById("shareBtn").classList.remove("hidden");
        document.getElementById("presentBtn").classList.remove("hidden");
        document.getElementById("clearBtn").classList.remove("hidden");
        document.getElementById("mappingBreakdown").classList.remove("hidden");
        document.getElementById("translation").classList.remove("hidden");
        
        // Display mapping breakdown
        document.getElementById("mappingBreakdown").innerHTML = 
          "<strong>Rincian Konversi:</strong><br>" + mappingBreakdown.join(", ");
        
        // Display translation (original text)
        document.getElementById("translationText").textContent = text;
        
        // Add to history
        addToHistory(text, result);
        
        // Update stats
        updateConversionStats(text, result);
      } else {
        document.getElementById("copyBtn").classList.add("hidden");
        document.getElementById("shareBtn").classList.add("hidden");
        document.getElementById("presentBtn").classList.add("hidden");
        document.getElementById("clearBtn").classList.add("hidden");
        document.getElementById("mappingBreakdown").classList.add("hidden");
        document.getElementById("translation").classList.add("hidden");
      }
    }
    
    function reverseConvert() {
      const text = document.getElementById("reverseInput").value.toLowerCase();
      let result = "";
      let i = 0;
      
      while (i < text.length) {
        let found = false;
        
        // Try to match the longest possible mapping first
        for (let len = 3; len >= 1; len--) {
          if (i + len <= text.length) {
            const substr = text.substring(i, i + len);
            if (reverseMap[substr]) {
              result += reverseMap[substr];
              i += len;
              found = true;
              break;
            }
          }
        }
        
        if (!found) {
          result += text[i];
          i++;
        }
      }
      
      document.getElementById("reverseOutput").value = result;
      document.getElementById("reverseCharCount").textContent = `${result.length} characters`;
      
      // Show/hide elements based on whether there's input
      if (text) {
        document.getElementById("reverseCopyBtn").classList.remove("hidden");
        document.getElementById("reverseClearBtn").classList.remove("hidden");
      } else {
        document.getElementById("reverseCopyBtn").classList.add("hidden");
        document.getElementById("reverseClearBtn").classList.add("hidden");
      }
    }
    
    function copyResult() {
      const output = document.getElementById("output");
      output.select();
      document.execCommand("copy");
      
      // Show notification
      showNotification("Copied to clipboard!");
    }
    
    function copyReverseResult() {
      const output = document.getElementById("reverseOutput");
      output.select();
      document.execCommand("copy");
      
      // Show notification
      showNotification("Copied to clipboard!");
    }
    
    function clearText() {
      document.getElementById("inputText").value = "";
      document.getElementById("output").value = "";
      document.getElementById("charCount").textContent = "0 characters";
      document.getElementById("copyBtn").classList.add("hidden");
      document.getElementById("shareBtn").classList.add("hidden");
      document.getElementById("presentBtn").classList.add("hidden");
      document.getElementById("clearBtn").classList.add("hidden");
      document.getElementById("mappingBreakdown").classList.add("hidden");
      document.getElementById("translation").classList.add("hidden");
    }
    
    function clearReverseText() {
      document.getElementById("reverseInput").value = "";
      document.getElementById("reverseOutput").value = "";
      document.getElementById("reverseCharCount").textContent = "0 characters";
      document.getElementById("reverseCopyBtn").classList.add("hidden");
      document.getElementById("reverseClearBtn").classList.add("hidden");
    }
    
    function showNotification(message) {
      const notification = document.getElementById("notification");
      document.getElementById("notificationText").textContent = message;
      notification.classList.add("show");
      
      // Hide notification after 3 seconds
      setTimeout(() => {
        notification.classList.remove("show");
      }, 3000);
    }
    
    function addToHistory(original, converted) {
      // Check if this conversion already exists in history
      const exists = conversionHistory.some(item => 
        item.original === original && item.converted === converted
      );
      
      if (!exists) {
        conversionHistory.unshift({
          original,
          converted,
          timestamp: new Date().toISOString()
        });
        
        // Keep only the last 20 items
        if (conversionHistory.length > 20) {
          conversionHistory = conversionHistory.slice(0, 20);
        }
        
        // Save to localStorage
        localStorage.setItem('conversionHistory', JSON.stringify(conversionHistory));
        
        // Update history display
        loadHistory();
      }
    }
    
    function loadHistory() {
      const historyContainer = document.getElementById('historyContainer');
      
      if (conversionHistory.length === 0) {
        historyContainer.innerHTML = '<p style="text-align:center; color:#666;">No history yet</p>';
        return;
      }
      
      historyContainer.innerHTML = '';
      
      conversionHistory.forEach((item, index) => {
        const historyItem = document.createElement('div');
        historyItem.className = 'history-item';
        
        const date = new Date(item.timestamp);
        const formattedDate = `${date.toLocaleDateString()} ${date.toLocaleTimeString()}`;
        
        historyItem.innerHTML = `
          <div class="history-text">${item.original}</div>
          <div class="history-result">${item.converted}</div>
          <button class="delete-history" onclick="deleteHistoryItem(${index})" title="Delete">
            <i class="fas fa-times"></i>
          </button>
        `;
        
        historyItem.addEventListener('click', function(e) {
          if (!e.target.closest('.delete-history')) {
            document.getElementById('inputText').value = item.original;
            document.getElementById('output').value = item.converted;
            document.getElementById('charCount').textContent = `${item.converted.length} characters`;
            document.getElementById('copyBtn').classList.remove('hidden');
            document.getElementById('shareBtn').classList.remove('hidden');
            document.getElementById('presentBtn').classList.remove('hidden');
            document.getElementById('clearBtn').classList.remove('hidden');
            document.getElementById('mappingBreakdown').classList.remove('hidden');
            document.getElementById('translation').classList.remove('hidden');
            document.getElementById('translationText').textContent = item.original;
            
            // Switch to converter tab
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.querySelector('[data-tab="converter"]').classList.add('active');
            document.getElementById('converter').classList.add('active');
          }
        });
        
        historyContainer.appendChild(historyItem);
      });
    }
    
    function deleteHistoryItem(index) {
      conversionHistory.splice(index, 1);
      localStorage.setItem('conversionHistory', JSON.stringify(conversionHistory));
      loadHistory();
      showNotification("History item deleted");
    }
    
    function clearHistory() {
      if (confirm('Are you sure you want to clear all history?')) {
        conversionHistory = [];
        localStorage.setItem('conversionHistory', JSON.stringify(conversionHistory));
        loadHistory();
        showNotification("History cleared");
      }
    }
    
    function exportHistory() {
      const dataStr = JSON.stringify(conversionHistory, null, 2);
      const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
      
      const exportFileDefaultName = `text-to-number-history-${new Date().toISOString().slice(0,10)}.json`;
      
      const linkElement = document.createElement('a');
      linkElement.setAttribute('href', dataUri);
      linkElement.setAttribute('download', exportFileDefaultName);
      linkElement.click();
      
      showNotification("History exported!");
    }
    
    function toggleShareOptions() {
      const shareOptions = document.getElementById('shareOptions');
      shareOptions.classList.toggle('show');
    }
    
    function shareToSocial(platform) {
      const text = document.getElementById('inputText').value;
      const result = document.getElementById('output').value;
      const shareText = `"${text}" → "${result}"`;
      
      let url = '';
      
      switch(platform) {
        case 'twitter':
          url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}`;
          break;
        case 'facebook':
          url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}&quote=${encodeURIComponent(shareText)}`;
          break;
        case 'whatsapp':
          url = `https://wa.me/?text=${encodeURIComponent(shareText)}`;
          break;
      }
      
      if (url) {
        window.open(url, '_blank');
      }
      
      // Hide share options
      document.getElementById('shareOptions').classList.remove('show');
    }
    
    function downloadAsFile() {
      const text = document.getElementById('inputText').value;
      const result = document.getElementById('output').value;
      const content = `Original: ${text}\nConverted: ${result}`;
      
      const dataUri = 'data:text/plain;charset=utf-8,'+ encodeURIComponent(content);
      
      const exportFileDefaultName = `text-to-number-${new Date().toISOString().slice(0,10)}.txt`;
      
      const linkElement = document.createElement('a');
      linkElement.setAttribute('href', dataUri);
      linkElement.setAttribute('download', exportFileDefaultName);
      linkElement.click();
      
      // Hide share options
      document.getElementById('shareOptions').classList.remove('show');
      
      showNotification("File downloaded!");
    }
    
    function openPresentationMode() {
      const text = document.getElementById('inputText').value;
      const result = document.getElementById('output').value;
      
      document.getElementById('presentationOutput').textContent = result;
      document.getElementById('presentationInput').textContent = text;
      document.getElementById('presentationMode').classList.add('active');
    }
    
    function closePresentationMode() {
      document.getElementById('presentationMode').classList.remove('active');
    }
    
    function loadTemplates() {
      const templateContainer = document.getElementById('templateContainer');
      templateContainer.innerHTML = '';
      
      templates.forEach((template, index) => {
        const templateItem = document.createElement('div');
        templateItem.className = 'template-item';
        templateItem.innerHTML = `
          ${template.text} <i class="fas fa-arrow-right"></i> ${template.result}
          <i class="fas fa-times" onclick="removeTemplate(${index})" style="margin-left:5px;"></i>
        `;
        templateItem.onclick = function(e) {
          if (!e.target.classList.contains('fa-times')) {
            useTemplate(template.text);
          }
        };
        templateContainer.appendChild(templateItem);
      });
    }
    
    function useTemplate(text) {
      document.getElementById('inputText').value = text;
      convert();
      
      // Switch to converter tab
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      document.querySelector('[data-tab="converter"]').classList.add('active');
      document.getElementById('converter').classList.add('active');
    }
    
    function addTemplate() {
      const text = document.getElementById('newTemplateText').value.trim();
      if (!text) return;
      
      // Convert the text using current mode
      const map = getMap();
      let result = "";
      for (const c of text.toLowerCase()) {
        result += map[c] ?? c;
      }
      
      templates.push({ text, result });
      localStorage.setItem('templates', JSON.stringify(templates));
      
      document.getElementById('newTemplateText').value = '';
      loadTemplates();
      
      showNotification("Template added!");
    }
    
    function removeTemplate(index) {
      templates.splice(index, 1);
      localStorage.setItem('templates', JSON.stringify(templates));
      loadTemplates();
      showNotification("Template removed!");
    }
    
    function updateConversionStats(text, result) {
      stats.totalConversions++;
      stats.totalCharacters += text.length;
      stats.modeUsage[currentMode]++;
      
      // Update character usage
      for (const char of text.toLowerCase()) {
        if (!stats.characterUsage[char]) {
          stats.characterUsage[char] = 0;
        }
        stats.characterUsage[char]++;
      }
      
      // Save stats
      localStorage.setItem('stats', JSON.stringify(stats));
      
      // Update display
      updateStats();
    }
    
    function updateStats() {
      document.getElementById('totalConversions').textContent = stats.totalConversions;
      document.getElementById('totalCharacters').textContent = stats.totalCharacters;
      
      // Find most used character
      let mostUsedChar = '-';
      let maxUsage = 0;
      for (const char in stats.characterUsage) {
        if (stats.characterUsage[char] > maxUsage) {
          maxUsage = stats.characterUsage[char];
          mostUsedChar = char;
        }
      }
      document.getElementById('mostUsedChar').textContent = mostUsedChar;
      
      // Find favorite mode
      let favoriteMode = 'Standard';
      let maxModeUsage = 0;
      for (const mode in stats.modeUsage) {
        if (stats.modeUsage[mode] > maxModeUsage) {
          maxModeUsage = stats.modeUsage[mode];
          favoriteMode = mode.charAt(0).toUpperCase() + mode.slice(1);
        }
      }
      document.getElementById('favoriteMode').textContent = favoriteMode;
    }
    
    function loadCustomMapping() {
      const container = document.getElementById('customMappingContainer');
      container.innerHTML = '';
      
      for (const key in customMap) {
        addCustomMappingRow(key, customMap[key]);
      }
      
      // Add at least one empty row if there are no custom mappings
      if (Object.keys(customMap).length === 0) {
        addCustomMappingRow();
      }
    }
    
    function addCustomMappingRow(key = '', value = '') {
      const container = document.getElementById('customMappingContainer');
      const row = document.createElement('div');
      row.className = 'custom-mapping-row';
      row.innerHTML = `
        <input type="text" class="custom-mapping-input" placeholder="Character" value="${key}">
        <input type="text" class="custom-mapping-input" placeholder="Mapping" value="${value}">
        <button class="remove-mapping-btn" onclick="this.parentElement.remove(); saveCustomMapping();">
          <i class="fas fa-times"></i>
        </button>
      `;
      container.appendChild(row);
    }
    
    function addCustomMapping() {
      addCustomMappingRow();
    }
    
    function saveCustomMapping() {
      const rows = document.querySelectorAll('#customMappingContainer .custom-mapping-row');
      customMap = {};
      
      rows.forEach(row => {
        const inputs = row.querySelectorAll('input');
        const key = inputs[0].value.trim().toLowerCase();
        const value = inputs[1].value.trim();
        
        if (key && value) {
          customMap[key] = value;
        }
      });
      
      localStorage.setItem('customMap', JSON.stringify(customMap));
      
      // If in custom mode, re-convert
      if (currentMode === 'custom') {
        convert();
      }
      
      showNotification("Custom mapping saved!");
    }
    
    function addBatchItem() {
      const container = document.getElementById('batchContainer');
      const item = document.createElement('div');
      item.className = 'batch-item';
      item.innerHTML = `
        <input type="text" class="batch-input" placeholder="Text to convert">
        <div class="batch-result">Result will appear here</div>
        <button class="remove-batch-btn" onclick="this.parentElement.remove();">
          <i class="fas fa-times"></i>
        </button>
      `;
      container.appendChild(item);
    }
    
    function processBatch() {
      const items = document.querySelectorAll('#batchContainer .batch-item');
      const map = getMap();
      
      items.forEach(item => {
        const input = item.querySelector('.batch-input');
        const result = item.querySelector('.batch-result');
        
        if (input.value.trim()) {
          let converted = "";
          for (const c of input.value.toLowerCase()) {
            converted += map[c] ?? c;
          }
          result.textContent = converted;
          
          // Add to history
          addToHistory(input.value, converted);
          
          // Update stats
          updateConversionStats(input.value, converted);
        }
      });
      
      showNotification("Batch processed!");
    }
    
    function toggleClipboardMonitor() {
      clipboardMonitorActive = !clipboardMonitorActive;
      const btn = document.getElementById('clipboardToggle');
      const monitor = document.getElementById('clipboardMonitor');
      
      if (clipboardMonitorActive) {
        btn.innerHTML = '<i class="fas fa-clipboard"></i> Disable';
        btn.classList.remove('secondary-btn');
        btn.classList.add('clear-btn');
        monitor.classList.add('active');
        
        // Store current clipboard content
        navigator.clipboard.readText().then(text => {
          lastClipboardContent = text;
        }).catch(err => {
          console.error('Failed to read clipboard contents: ', err);
        });
        
        // Start monitoring clipboard
        monitorClipboard();
        
        showNotification("Clipboard monitor enabled!");
      } else {
        btn.innerHTML = '<i class="fas fa-clipboard"></i> Enable';
        btn.classList.remove('clear-btn');
        btn.classList.add('secondary-btn');
        monitor.classList.remove('active');
        
        showNotification("Clipboard monitor disabled!");
      }
    }
    
    function monitorClipboard() {
      if (!clipboardMonitorActive) return;
      
      navigator.clipboard.readText().then(text => {
        if (text !== lastClipboardContent && text.trim()) {
          lastClipboardContent = text;
          // Show notification that clipboard has changed
          const monitor = document.getElementById('clipboardMonitor');
          monitor.style.animation = 'none';
          setTimeout(() => {
            monitor.style.animation = 'pulse 1s infinite';
          }, 10);
        }
      }).catch(err => {
        console.error('Failed to read clipboard contents: ', err);
      });
      
      // Check again after 1 second
      setTimeout(monitorClipboard, 1000);
    }
    
    function convertClipboard() {
      if (!lastClipboardContent.trim()) return;
      
      document.getElementById('inputText').value = lastClipboardContent;
      convert();
      
      // Switch to converter tab
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      document.querySelector('[data-tab="converter"]').classList.add('active');
      document.getElementById('converter').classList.add('active');
      
      // Reset animation
      const monitor = document.getElementById('clipboardMonitor');
      monitor.style.animation = 'none';
    }
    
    // Add pulse animation for clipboard monitor
    const style = document.createElement('style');
    style.textContent = `
      @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>
